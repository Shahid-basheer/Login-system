<%-include('header')-%>
<div class="center-div mt-5" id="login">
    <div class="container w-25 border py-4">
        <div class="title pb-5 text-center">
            <h2 class="font-weight-bold">Login System</h2>
            <span class="text-center">Log in for the existing user</span>
            <%if(locals.logout){%>
                <div class="alter alert-success text-center"><%=logout%></div>   
                <%}%>
            
        </div>
        <form action="/route/login/" method="post">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="Email" name="email">
                <small class="form-text text-muted text-left">Register email address</small>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" name="password">
            </div>
            <button type="submit" class="btn btn-success rounded-pill mt-3">Submit</button>
        </form>
    </div>
</div>
<%-include('footer')-%>